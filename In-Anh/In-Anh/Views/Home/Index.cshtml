@using static In_Anh.Models.ImageModel;
@{
    ViewData["Title"] = "Home Page";
    var lang = ViewBag.Language as Languages;
    
}

<div class="text-center">
    <h1 class="display-4">Welssscosme Chinhhhhh</h1>
    <form id="formimage" class="container image-cointainer hidden">

       
      

        <select class=" image-size-select w-25 form-select" aria-label="Default select example">
            <option selected>@lang.ChooseSize</option>
            @{
                <option value="0">4x6</option>
                <option value="1">6x9</option>
                <option value="2">9x12</option>
                <option value="3">10x15</option>
                <option value="4">13x18</option>
                <option value="5">15x21</option>
                <option value="6">20x30 (~A4)</option>
            }

            
           
        </select>

    </form>


<!-- Button trigger modal -->



    <button id="md-print" type="button" class="pt-3 pb-3 ps-4 pe-4 position-fixed mb-5 bottom-0 start-50 translate-middle-x btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#exampleModal">@lang.Print @lang.All <span></span> @lang.Image </button>


    
  


<!-- Modal -->
<div class="modal fade modal-dialog modal-dialog-centered " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>

